                <form class="review-form" name="review-form" id="review-form" action="product.html" data-id={{id}}>
                  <div class="review-form__header">
                    <div class="section__accent-title--left">
                      <svg class="section__rings" width="30" height="20">
                        <use href="assets/sprite.svg#icon-rings"></use>
                      </svg>
                      say a word
                    </div>
                    <h2 class="section__title">
                      Leave a review
                    </h2>
                     <p class="review-form__header-text">Leave your product review so other buyers can rely on your opinion about the product.</p>
                  </div>
                  <div class="rating-wrapper">
                    <div class="rating form">
                      <i class="rating__star far fa-star form" data-index='1'></i>
                      <i class="rating__star far fa-star form" data-index='2'></i>
                      <i class="rating__star far fa-star form" data-index='3'></i>
                      <i class="rating__star far fa-star form" data-index='4'></i>
                      <i class="rating__star far fa-star form" data-index='5'></i>
                    </div>
                  </div>
          
                  <div class="review-form__body">
                    <label class="review-form__input-wrapper">
                      <input
                        type="text"
                        class="review-form__input"
                        name="reviewUserName"
                        id="reviewUserName"
                        placeholder="Enter your name"
                        minlength="2"
                        maxlength="50"
                        {{!-- pattern="^[a-z ,.'-]+$" --}}
                        required
                      />
                    </label>

                  <label class="review-form__input-wrapper">
                    <textarea
                      class="delivery-form__textarea"
                      name="reviewText"
                      placeholder="Enter your feedback"
                    ></textarea>
                  </label>

                    <input
                        type="text"
                        class="review-form__number"
                        name="reviewNumber"
                        id="reviewNumber"        
                      />

                     <button class="btn-main--review" type="submit">post a review</button>
                  </div>
               </form>